#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>

void* function( void* arg)
{
	printf("This is thread %d\n",pthread_self());
	return 0;
}

void* function2( void* arg)
{
	for(int i=0; i<10;i++)
		printf("Count: %d\n");
	printf("This is thread %d\n",pthread_self());
	return 0;
}

int main(void) {
	pthread_t tid1, tid2;
	pthread_attr_t attr;

	   pthread_attr_init( &attr );
	   pthread_attr_setdetachstate(
	      &attr, PTHREAD_CREATE_DETACHED );
	   pthread_create( &tid1, &attr, &function, NULL );
	   pthread_create( &tid2,&attr,&function2,NULL);
	   /* Allow threads to run for 60 seconds. */
	   pthread_join(tid1,NULL);
	   return EXIT_SUCCESS;
}
