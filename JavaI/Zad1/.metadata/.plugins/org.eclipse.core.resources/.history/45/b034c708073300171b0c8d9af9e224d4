package cars;

public class Car {
	private int speed;
	private double price;
	private String color;
	
	public Car(int sped, double pri, String col){
		this.setColor(col);
		this.setPrice(pri);
		this.setSpeed(sped);
	}
	private void setSpeed(int sped){
		this.speed = sped;
	}
	private void setPrice(double pri){
		this.price = pri;
	}
	private void setColor(String col){
		this.color = col;
	}
	public int getSpeed(){
		return this.speed;
	}
	public double getSalePrice(){
		return this.price;
	}
	public String getColor(){
		return this.color;
	}
}
